# Menzah_fits Environment Configuration
# Copy this file to .env and update the values

# Server port (default: 3000)
PORT=3000

# Node environment (development, production)
NODE_ENV=development

# =============================================
# CORS Configuration (Production Only)
# =============================================

# Additional allowed origins for CORS (comma-separated)
# This is in addition to the default allowed origins
# Example: ALLOWED_ORIGINS=https://example.com,https://www.example.com
# Note: In development (NODE_ENV !== 'production'), all origins are allowed
# Note: Only URLs starting with http:// or https:// are accepted for security
ALLOWED_ORIGINS=

# =============================================
# Authentication Credentials
# IMPORTANT: Change these in production!
# =============================================

# Admin user password (username: admin)
# Default: admin
ADMIN_PASSWORD=admin

# Dev Superior user password (username: devsuperior)
# Default: dev@menzah2024
DEV_PASSWORD=dev@menzah2024

# Secret key for token signing (HMAC-SHA256)
# Generate a 32-byte random key with one of these methods:
#   openssl rand -hex 32
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, a random key is generated on each server restart
# (which will invalidate all existing tokens)
TOKEN_SECRET=

# =============================================
# Cloudinary Configuration (Media Storage)
# Required for product image/video uploads
# Get credentials at: https://cloudinary.com/console
# =============================================
#
# Installation: npm i cloudinary
#
# You can find your credentials in the Cloudinary Dashboard:
# - Cloud name: Your unique cloud identifier
# - API key: Your public API key
# - API secret: Your private API secret (keep this secure!)
#
# Alternative: You can also use the CLOUDINARY_URL format:
# CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
#
# =============================================

# Your Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=

# Your Cloudinary API key
CLOUDINARY_API_KEY=

# Your Cloudinary API secret
CLOUDINARY_API_SECRET=

# =============================================
# Media Upload Configuration (Advanced)
# =============================================

# Maximum file size for uploads in MB (default: 10)
# Recommended: 10 for images, 50 for videos
MAX_FILE_SIZE_MB=10

# Maximum video file size in MB (default: 50)
MAX_VIDEO_SIZE_MB=50

# Allowed image formats (comma-separated, default: jpg,jpeg,png,gif,webp)
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Allowed video formats (comma-separated, default: mp4,webm,mov)
ALLOWED_VIDEO_FORMATS=mp4,webm,mov

# Image quality setting (1-100, default: 80)
# Lower = smaller file, higher = better quality
IMAGE_QUALITY=80

# Enable automatic format conversion to WebP/AVIF (default: true)
# WebP provides better compression than JPEG/PNG
AUTO_FORMAT_CONVERSION=true

# Enable responsive image generation (default: true)
# Generates multiple sizes for different devices
RESPONSIVE_IMAGES=true

# Cloudinary folder for product images (default: menzah_fits/products)
CLOUDINARY_FOLDER=menzah_fits/products

# Enable image moderation (AI-powered content detection, requires Cloudinary add-on)
# Options: false, manual, webpurify, aws_rek
ENABLE_MODERATION=false

# =============================================
# Email Configuration (SMTP)
# Required for sending order receipts via email
# =============================================

# SMTP server hostname
# Examples:
#   Gmail: smtp.gmail.com
#   Outlook: smtp-mail.outlook.com
#   SendGrid: smtp.sendgrid.net
#   Mailgun: smtp.mailgun.org
SMTP_HOST=

# SMTP server port (default: 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use SSL/TLS (true for port 465, false for port 587)
SMTP_SECURE=false

# SMTP authentication username (usually your email address)
SMTP_USER=

# SMTP authentication password
# For Gmail: Use an "App Password" (not your regular password)
#   1. Enable 2-factor authentication
#   2. Generate app password at: https://myaccount.google.com/apppasswords
# For SendGrid: Use your API key
# For Mailgun: Use your SMTP password from dashboard
SMTP_PASS=

# From address for emails (must be from your domain or verified email)
SMTP_FROM="Menzah_fits <hello@menzahfits.com>"

